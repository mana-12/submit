<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">



            <TextView android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好きなニュースカテゴリを選んでください"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true" />


            <Button android:id="@+id/main"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="メイン"
                android:layout_marginTop="30dp"


                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <Button android:id="@+id/Japan"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="国内"
                android:layout_below="@+id/main"
                android:layout_marginTop="0dp"

                />

            <Button android:id="@+id/notJapan"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="海外"
                android:layout_below="@+id/Japan"
                />

            <Button android:id="@+id/it"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="IT/経済"
                android:layout_below="@+id/notJapan"/>

            <Button android:id="@+id/geinou"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="芸能"
                android:layout_below="@+id/it"
                />

            <Button android:id="@+id/sport"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="スポーツ"
                android:layout_below="@+id/geinou"
                />

            <Button android:id="@+id/movie"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="映画"
                android:layout_below="@+id/sport"
                />

            <Button android:id="@+id/food"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="グルメ"
                android:layout_below="@+id/movie"
                />

            <Button android:id="@+id/girls"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="ガールズ"
                android:layout_below="@+id/food"
                />

            <Button android:id="@+id/trend"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="トレンド"

                android:layout_below="@+id/girls"/>


        </RelativeLayout>
    </ScrollView>